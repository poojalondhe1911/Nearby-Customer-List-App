<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingBottom="@dimen/margin_eight_dp"
    android:paddingTop="@dimen/margin_eight_dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:elevation="@dimen/margin_eight_dp"
    android:id="@+id/customerLayout">


    <TextView
        android:id="@+id/txtId"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_sixteen_dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintHorizontal_bias="0.7"
        app:layout_constraintHorizontal_weight="0.8"
        android:layout_marginEnd="@dimen/margin_eight_dp"
        android:textSize="@dimen/title_text_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/black"
        />


    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_sixteen_dp"
        android:layout_marginStart="@dimen/margin_sixteen_dp"
        android:layout_marginBottom="@dimen/margin_sixteen_dp"
        app:layout_constraintHorizontal_bias="0.7"
        app:layout_constraintHorizontal_weight="0.8"
        android:layout_marginEnd="@dimen/margin_eight_dp"
        android:textSize="@dimen/title_text_size"
        app:layout_constraintStart_toEndOf="@id/txtId"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/txtInvite"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/share_image_dimen"
        android:layout_marginTop="@dimen/margin_sixteen_dp"
        android:layout_marginEnd="@dimen/margin_sixteen_dp"
        android:text="@string/invite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
